<mah:MetroWindow x:Class="TradeHubGui.Views.GeneticOptimizationWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                xmlns:views="clr-namespace:TradeHubGui.Views"
                GlowBrush="Silver"
                ShowInTaskbar="True"
                WindowStartupLocation="CenterScreen"
                Title="Genetic Optimization"
                Width="900"
                Height="600"
                MinWidth="500" 
                MinHeight="500"
                Background="{StaticResource BaseBackground}"
                Icon="{StaticResource imgGenetic}">
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <Image Height="20" Width="20" Source="{StaticResource imgGenetic}"/>
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="0.6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="2" Grid.Column="0" Style="{StaticResource ContentBorderStyle}" Margin="4"/>
            <Border Grid.RowSpan="2" Grid.Column="2" Style="{StaticResource ContentBorderStyle}" Margin="4"/>

            <DockPanel>
                <Button DockPanel.Dock="Right" MinWidth="75" IsEnabled="True" Focusable="False" Margin="20">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="11" Height="11" Margin="0,0,4,0" Source="{StaticResource imgStart}"/>
                        <TextBlock Text="Execute"/>
                    </StackPanel>
                </Button>

                <StackPanel Margin="10" Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="10,4,20,4">
                        <TextBlock Text="Strategy" Margin="0,0,4,0" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource BaseBrush2}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Tag, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}, FallbackValue=AA000001}"
                                FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource BaseBrush0}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10,4,20,4">
                        <TextBlock Text="Completed rounds" Margin="0,0,4,0" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource BaseBrush2}" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding CompletedRounds, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}, FallbackValue=12}"
                                FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource BaseBrush0}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <HeaderedContentControl Grid.Row="1" Header="Parameters" Margin="10,0,10,10">
                <HeaderedContentControl.Resources>
                    <ResourceDictionary>
                        <Style TargetType="Label">
                            <Setter Property="Height" Value="24"/>
                        </Style>
                    </ResourceDictionary>
                </HeaderedContentControl.Resources>

                <DockPanel>
                    <DockPanel DockPanel.Dock="Top">
                        <StackPanel DockPanel.Dock="Left">
                            <Label Content="Rounds"/>
                            <Label Content="Interations"/>
                            <Label Content="Population size"/>
                        </StackPanel>
                        <StackPanel Width="100" HorizontalAlignment="Left">
                            <TextBox/>
                            <TextBox/>
                            <TextBox/>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid x:Name="StrategyParametersDataGrid" Margin="0,20,0,0"
                                SelectionMode="Single" 
                                IsTextSearchEnabled="True"
                                IsSynchronizedWithCurrentItem="True"
                                CanUserAddRows="False" CanUserDeleteRows="False"
                                CanUserResizeRows="False" CanUserSortColumns="True"
                                IsReadOnly="False"
                                SelectionUnit="FullRow"
                                AutoGenerateColumns="False"
                                RowHeight="22">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Index" Width="0.4*" Binding="{Binding Path=Index}" />
                            <DataGridTextColumn Header="Description" Width="0.7*" Binding="{Binding Path=Descriptin}" />
                            <DataGridTextColumn Header="Start value" Width="0.4*" Binding="{Binding Path=StartValue}" />
                            <DataGridTextColumn Header="End value" Width="0.4*" Binding="{Binding Path=EndValue}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </HeaderedContentControl>

            <GridSplitter Grid.Column="1" Grid.RowSpan="2" ResizeDirection="Columns"/>


            <Button Grid.Row="0" Grid.Column="2" MinWidth="75" IsEnabled="True" Focusable="False" Margin="20" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Image Width="14" Height="14" Margin="0,0,4,0" Source="{StaticResource imgExport}"/>
                    <TextBlock Text="Export"/>
                </StackPanel>
            </Button>

            <HeaderedContentControl Grid.Row="1" Grid.Column="2" Header="Result" Margin="10,0,10,10">
                <DataGrid x:Name="ResultDataGrid" 
                            SelectionMode="Single" 
                            IsTextSearchEnabled="True"
                            IsSynchronizedWithCurrentItem="True"
                            CanUserAddRows="False" CanUserDeleteRows="False"
                            CanUserResizeRows="False" CanUserSortColumns="True"
                            IsReadOnly="False"
                            SelectionUnit="FullRow"
                            AutoGenerateColumns="False"
                            RowHeight="22">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Property" Width="*" Binding="{Binding Path=Property}" />
                        <DataGridTextColumn Header="Value" Width="*" Binding="{Binding Path=Value}" />
                    </DataGrid.Columns>
                </DataGrid>
            </HeaderedContentControl>
        </Grid>


        <StackPanel Grid.Row="1" Margin="14,8,14,12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button DockPanel.Dock="Right" Content="Close" MinWidth="70" Margin="3"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
