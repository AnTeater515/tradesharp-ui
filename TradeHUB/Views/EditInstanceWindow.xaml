<mah:MetroWindow x:Class="TradeHUB.Views.EditInstanceWindow"
				 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
				 xmlns:views="clr-namespace:TradeHUB.Views"
				 GlowBrush="Silver"
				 ShowInTaskbar="False"
				 WindowStartupLocation="CenterOwner"
				 Title="Edit Instance"
				 Width="300"
				 SizeToContent="Height"
				 MinWidth="200" MinHeight="200">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition />
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!--<TextBlock DockPanel.Dock="Top" Margin="20,10,20,0" Text="{Binding Tag, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}}" 
				   Style="{StaticResource SubHeaderTextBlockStyle}"/>-->

		<ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="20">
			<views:InstanceView />
		</ScrollViewer>

		<StackPanel Grid.Row="2" Margin="14" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button DockPanel.Dock="Right" Content="Edit" MinWidth="70" IsDefault="True" Margin="3"/>
			<Button DockPanel.Dock="Right" Content="Cancel" MinWidth="70" IsCancel="True" Margin="3"/>
		</StackPanel>
	</Grid>
</mah:MetroWindow>
